{
    "name": "nextjs-extension",
    "displayName": "nextjs-extension",
    "description": "An extension for Next.js",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.80.0"
    },
    "publisher": "Romuald Rodolphe",
    "categories": [
        "Other",
        "Linters",
        "Debuggers"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "nextjs.refresh-workspace",
                "title": "Refresh the workspace",
                "icon":{
                  "light": "asset/refresh_light.svg",
                  "dark": "asset/refresh_dark.svg"
                }
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "nextjs-extension",
                    "title": "Next.js extension",
                    "icon": "media/nextjs-icon.svg"
                }
            ]
        },
        "views": {
            "nextjs-extension": [
                {
                    "id": "nextjs-overview",
                    "name": "Overview"
                },
                {
                    "id": "nextjs-route",
                    "name": "Route of the project"
                },
                {
                    "id": "nextjs-api-route",
                    "name": "API Route of the project"
                }
            ]
        },
        "menus": {
          "view/title": [
            {
              "command": "nextjs.refresh-workspace",
              "when": "view == nextjs-overview",
              "group": "navigation"

            }
          ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "20.2.5",
        "@types/vscode": "^1.80.0",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "@vscode/test-electron": "^2.3.2",
        "eslint": "^8.41.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "ts-loader": "^9.4.3",
        "typescript": "^5.1.3",
        "webpack": "^5.85.0",
        "webpack-cli": "^5.1.1"
    },
    "dependencies": {
        "fast-glob": "^3.3.2"
    }
}
