{
  "name": "next-extension",
  "displayName": "next-extension",
  "description": "An extension for NextJS",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "publisher": "Romuald Rodolphe",
  "categories": [
    "Other","Linters","Debuggers"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "nextjs-extension.hello-world",
        "title": "Display an hello world"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "nextjs-extension",
          "title": "NextJS Extension",
          "icon": "asset/nextjs-logo.svg"
        }
      ]
    },
    "views": {
      "nextjs-extension": [
        {
          "id": "nextjs-overview",
          "name": "Overview"
        },
        {
          "id": "nextjs-route",
          "name": "Route of the project"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "ts-loader": "^9.4.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1",
    "@vscode/test-electron": "^2.3.2"
  }
}
